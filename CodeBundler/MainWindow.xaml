<Window x:Class="CodeBundler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeBundler"
        mc:Ignorable="d"
        Title="Code Bundler"
        FontSize="14"
        Height="768" Width="1024">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Grid.Column="0"
              Grid.ColumnSpan="2"
              FontSize="14">
            <MenuItem Header="_File">
                <MenuItem Header="Select Source">
                    <MenuItem Header="_Solution"
                              Click="SelectSourceSolution_Click"/>
                    <MenuItem Header="_Project"
                              Click="SelectSourceProject_Click"/>
                    <MenuItem Header="_Folder(s)"
                              Click="SelectSourceFolder_Click"/>
                    <MenuItem Header="_File(s)"
                              Click="SelectSourceFiles_Click"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_Exit"
                          Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="View Help"
                          Click="ViewHelp_Click"/>
                <Separator/>
                <MenuItem Header="_About"
                          Click="About_Click"/>
            </MenuItem>
        </Menu>

        <Label Grid.Row="2" Grid.Column="0"
               Content="Current File:"/>
        <Label Grid.Row="2" Grid.Column="1"
               x:Name="CurrentFileNameLabel"/>

        <!-- Page Body -->
        <TextBox Grid.Row="4" Grid.Column="0"
                 Grid.ColumnSpan="2"
                 x:Name="OutputTextBox"
                 IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 Margin="10">
            <TextBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Copy" Click="CopyMenuItem_Click" />
                </ContextMenu>
            </TextBox.ContextMenu>
        </TextBox>

    </Grid>

</Window>
